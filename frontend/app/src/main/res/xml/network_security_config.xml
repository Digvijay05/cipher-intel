<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Disable cleartext traffic universally -->
    <base-config cleartextTrafficPermitted="false" />
    
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">app.cipher.com</domain>
        <!-- Add backend domain pin here when deployed -->
        <pin-set expiration="2027-01-01">
            <!-- Example pin for testing / future production domain -->
            <!-- <pin digest="SHA-256">BASE64_CERTIFICATE_HASH</pin> -->
        </pin-set>
    </domain-config>
</network-security-config>
