<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <application>
        <!-- 
          Exported attribute set to true ONLY in debug to allow ADB interactions. 
          This entire manifest is merged ONLY into debug builds and completely omitted from release.
        -->
        <receiver
            android:name="com.cipher.security.debug.DebugSmsReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.cipher.security.DEBUG_INJECT_SMS" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
